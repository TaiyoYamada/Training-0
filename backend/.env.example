# ============================================
# Training-0 環境変数テンプレート
# cp .env.example .env で使用開始
# ============================================

# --- アプリケーション設定 ---
APP_NAME=Training-0
APP_VERSION=0.1.0
DEBUG=true

# --- 環境モード（dev / staging / prod） ---
ENVIRONMENT=dev

# --- ロギング ---
LOG_LEVEL=INFO
LOG_FORMAT=text

# --- PostgreSQL 接続設定 ---
POSTGRES_USER=training0
POSTGRES_PASSWORD=training0_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=training0_db

# --- サーバー設定 ---
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_PORT=5173

# --- CORS 設定（カンマ区切り） ---
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# --- フロントエンド設定 ---
PUBLIC_API_BASE_URL=http://localhost:8000

# --- 将来的なJWT設定（未使用） ---
# JWT_SECRET_KEY=your-secret-key-here
# JWT_ALGORITHM=HS256
# JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
